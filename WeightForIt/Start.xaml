<Page x:Class="WeightForIt.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WeightForIt"
      mc:Ignorable="d" 
      d:DesignHeight="750" d:DesignWidth="450"
      Title="Start" Loaded="Page_Loaded">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="WelcomeBlock" TextAlignment="Center" FontSize="48" VerticalAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="StartButton" Content="Start!" HorizontalAlignment="Stretch" VerticalAlignment="Center" FontSize="60" Margin="40,0,40,3" IsDefault="True" Padding="0,10" Grid.Row="1" Click="StartButton_Click" />
    </Grid>
</Page>
